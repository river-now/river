{
  "name": "hwy-monorepo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "author": {
    "name": "Samuel J. Cook"
  },
  "description": "Monorepo for Hwy framework",
  "scripts": {
    "build:build": "pnpm -r --filter @hwy-js/build run build",
    "build:core": "pnpm -r --filter hwy run build",
    "build:dev": "pnpm -r --filter @hwy-js/dev run build",
    "build:client": "pnpm -r --filter @hwy-js/client run build",
    "build:react": "pnpm -r --filter @hwy-js/react run build",
    "build:h3": "pnpm -r --filter @hwy-js/h3 run build",
    "build": "pnpm build:build && pnpm build:dev && pnpm build:core && pnpm build:client && pnpm build:react && pnpm build:h3",
    "dev:test": "npx vitest",
    "dev:build": "pnpm -r --filter @hwy-js/build run dev",
    "dev:core": "pnpm -r --filter hwy run dev",
    "dev:dev": "pnpm -r --filter @hwy-js/dev run dev",
    "dev:client": "pnpm -r --filter @hwy-js/client run dev",
    "dev:react": "pnpm -r --filter @hwy-js/react run dev",
    "dev:h3": "pnpm -r --filter @hwy-js/h3 run dev",
    "pre-test": "pnpm build && pnpm -r --filter tester-routes run build",
    "dev": "pnpm pre-test && npm-run-all --parallel dev:*",
    "add-pre": "node scripts/add_pre.js",
    "remove-pre": "node scripts/remove_pre.js",
    "bump-pre": "node scripts/bump_pre.js",
    "bump-patch": "node scripts/bump_patch.js",
    "bump-minor": "node scripts/bump_minor.js",
    "bump-major": "node scripts/bump_major.js",
    "current-version": "node scripts/current_version.js",
    "set-version": "node scripts/set_version.js",
    "test": "pnpm pre-test && npx vitest run",
    "typecheck:build": "pnpm -r --filter @hwy-js/build run typecheck",
    "typecheck:core": "pnpm -r --filter hwy run typecheck",
    "typecheck:dev": "pnpm -r --filter @hwy-js/dev run typecheck",
    "typecheck:client": "pnpm -r --filter @hwy-js/client run typecheck",
    "typecheck:react": "pnpm -r --filter @hwy-js/react run typecheck",
    "typecheck:h3": "pnpm -r --filter @hwy-js/h3 run typecheck",
    "typecheck": "npm-run-all --parallel typecheck:*",
    "pre-publish": "pnpm typecheck && pnpm test",
    "publish-pre": "pnpm pre-publish && pnpm -r publish-pre",
    "publish-non-pre": "pnpm pre-publish && pnpm -r publish-non-pre",
    "update-latest": "pnpm update --latest && pnpm -r update-latest && pnpm i"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4",
    "vitest": "^1.4.0"
  },
  "prettier": {
    "useTabs": false,
    "proseWrap": "never"
  }
}
