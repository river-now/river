{
  "name": "@hwy-js/build",
  "version": "0.0.0-beta.70",
  "author": {
    "name": "Samuel J. Cook"
  },
  "license": "MIT",
  "description": "Build tools for Hwy framework",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup-node index.ts --format esm --dts",
    "dev": "rm -rf dist && tsup-node index.ts --format esm --dts --watch",
    "publish-beta": "npm publish --tag beta",
    "publish-non-beta": "npm publish",
    "update-latest": "pnpm update --latest",
    "typecheck": "tsc"
  },
  "bin": {
    "hwy-dev-serve": "./scripts/dev-serve.js",
    "hwy-build": "./scripts/run-build-tasks.js"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.2",
    "get-port-please": "^3.1.2",
    "jsonc-parser": "^3.2.1",
    "readdirp": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hwy-js/hwy",
    "directory": "packages/build"
  },
  "homepage": "https://hwy.dev",
  "bugs": "https://github.com/hwy-js/hwy/issues"
}
