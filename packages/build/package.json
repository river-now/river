{
  "name": "@hwy-js/build",
  "version": "0.8.2",
  "author": {
    "name": "Samuel J. Cook"
  },
  "description": "Build tools for Hwy framework",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup-node index.ts --format esm --dts",
    "dev": "rm -rf dist && tsup-node index.ts --format esm --dts --watch",
    "publish-pre": "npm publish --tag pre",
    "publish-non-pre": "npm publish",
    "update-latest": "pnpm update --latest",
    "typecheck": "tsc"
  },
  "bin": {
    "hwy-dev-serve": "./scripts/dev_serve.js",
    "hwy-build": "./scripts/run_build_tasks.js"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.2",
    "get-port-please": "^3.1.2",
    "jsonc-parser": "^3.2.1",
    "readdirp": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sjc5/hwy",
    "directory": "packages/build"
  },
  "homepage": "https://hwy.dev",
  "bugs": "https://github.com/sjc5/hwy/issues"
}
