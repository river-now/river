{
	"$schema": "dist/static/internal/schema.json",
	"Core": {
		"ConfigLocation": "backend/wave.config.json",
		"DevBuildHook": "go run ./backend/cmd/build --dev --hook",
		"ProdBuildHook": "go run ./backend/cmd/build --hook",
		"MainAppEntry": "backend/cmd/serve",
		"DistDir": "backend/dist",
		"StaticAssetDirs": {
			"Private": "backend/assets",
			"Public": "frontend/assets"
		},
		"CSSEntryFiles": {
			"Critical": "frontend/src/styles/main.critical.css",
			"NonCritical": "frontend/src/styles/main.css"
		},
		"PublicPathPrefix": "/"
	},
	"River": {
		"UIVariant": "solid",
		"HTMLTemplateLocation": "entry.go.html",
		"ClientEntry": "frontend/src/entry.tsx",
		"ClientRouteDefsFile": "frontend/src/routes.ts",
		"TSGenOutPath": "frontend/src/river.gen.ts",
		"BuildtimePublicURLFuncName": "hashedURL"
	},
	"Vite": {
		"JSPackageManagerBaseCmd": "pnpm"
	},
	"Watch": {
		"HealthcheckEndpoint": "/healthz",
		"Include": [
			{
				"Pattern": "backend/assets/markdown/**/*.md",
				"OnlyRunClientDefinedRevalidateFunc": true,
				"SkipRebuildingNotification": true
			}
		]
	}
}
