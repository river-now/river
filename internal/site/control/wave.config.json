{
	"$schema": "dist/static/internal/schema.json",
	"Core": {
		"ConfigLocation": "control/wave.config.json",
		"DevBuildHook": "go run ./control/cmd/build --dev --hook",
		"ProdBuildHook": "go run ./control/cmd/build --hook",
		"MainAppEntry": "control/cmd/serve",
		"DistDir": "control/dist",
		"StaticAssetDirs": {
			"Private": "assets/private",
			"Public": "assets/public"
		},
		"CSSEntryFiles": {
			"Critical": "frontend/styles/main.critical.css",
			"NonCritical": "frontend/styles/main.css"
		},
		"PublicPathPrefix": "/"
	},
	"River": {
		"UIVariant": "solid",
		"HTMLTemplateLocation": "entry.go.html",
		"ClientEntry": "frontend/entry.tsx",
		"ClientRouteDefsFile": "frontend/routes.ts",
		"TSGenOutPath": "frontend/river.gen.ts",
		"BuildtimePublicURLFuncName": "hashedURL"
	},
	"Vite": {
		"JSPackageManagerBaseCmd": "pnpm"
	},
	"Watch": {
		"HealthcheckEndpoint": "/healthz",
		"Include": [
			{
				"Pattern": "assets/private/markdown/**/*.md",
				"OnlyRunClientDefinedRevalidateFunc": true
			}
		]
	}
}
