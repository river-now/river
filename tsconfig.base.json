{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"verbatimModuleSyntax": true,
		"allowImportingTsExtensions": true
	},
	"exclude": [
		"**/node_modules",
		"npm_dist",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.bench.ts",
		"**/*.bench.tsx"
	]
}
